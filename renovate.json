{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Berlin",
  "forkProcessing": "enabled",
  "prConcurrentLimit": 20,
  "prHourlyLimit": 100,
  "extends": ["config:recommended", ":dependencyDashboard", ":automergeMinor", ":automergePatch"],
  "automergeSchedule": [
    "before 6pm on Tuesday"
  ],
  "packageRules": [
    {
      "matchManagers": ["maven"],
      "groupName": "maven"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    }
  ]
}
